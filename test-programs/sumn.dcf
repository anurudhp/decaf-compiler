class Program {
	int read_int() {
		int value, sign;
		value = 0;
		sign = 1;
		for i = 0 , 100 {
			int curr;
			curr = callout("getchar");
			if (curr == 45 && i == 0) {
				sign = -1;
				continue;
			}
			if (curr < 48) {
				break;
			}
			value = 10 * value + (curr - 48);
		}
		return sign * value;
	}

	void write_int(int n) {
		callout("printf", "%d", n);
	}

	void ignore() {
		callout("getchar");
	}

	void main() {
		int n, s;
		n = read_int();
		s = (n * (n + 1)) / 2;
		write_int(s);
	}
}